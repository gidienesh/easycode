# Staging Environment Variables for EasyCode Platform
# Copy these to Cloudflare Workers dashboard or use wrangler secret put

# Core Environment
NODE_ENV=staging
NEXTJS_ENV=staging
NEXT_PUBLIC_APP_URL=https://staging-app.easycode.com

# API Service Endpoints
NEXT_PUBLIC_API_BASE_URL=https://staging-api.easycode.com
NEXT_PUBLIC_TENANT_SERVICE_URL=https://staging-tenant-service.easycode.com
NEXT_PUBLIC_USER_SERVICE_URL=https://staging-user-service.easycode.com
NEXT_PUBLIC_CRM_SERVICE_URL=https://staging-crm-service.easycode.com
NEXT_PUBLIC_FINANCE_SERVICE_URL=https://staging-finance-service.easycode.com
NEXT_PUBLIC_INVENTORY_SERVICE_URL=https://staging-inventory-service.easycode.com
NEXT_PUBLIC_HR_SERVICE_URL=https://staging-hr-service.easycode.com
NEXT_PUBLIC_POS_SERVICE_URL=https://staging-pos-service.easycode.com
NEXT_PUBLIC_NOTIFICATION_SERVICE_URL=https://staging-notification-service.easycode.com

# App Configuration
NEXT_PUBLIC_APP_NAME=EasyCode Platform (Staging)
NEXT_PUBLIC_APP_VERSION=1.0.0-staging
NEXT_PUBLIC_MANTINE_COLOR_SCHEME=light
NEXT_PUBLIC_MANTINE_PRIMARY_COLOR=blue

# Multi-tenancy Configuration
NEXT_PUBLIC_ENABLE_TENANT_SWITCHING=true
NEXT_PUBLIC_ENABLE_MULTI_TENANCY=true
NEXT_PUBLIC_DEFAULT_TENANT_ID=default
NEXT_PUBLIC_TENANT_DOMAIN_SUFFIX=.easycode.com

# Security & CORS
NEXT_PUBLIC_ALLOWED_ORIGINS=https://staging-app.easycode.com,https://staging-api.easycode.com

# Secrets (set these via wrangler secret put)
# NEXT_PUBLIC_JWT_SECRET=your-staging-jwt-secret
# NEXT_PUBLIC_JWT_EXPIRES_IN=24h
# NEXT_PUBLIC_API_KEY=your-staging-api-key
# R2_ACCESS_KEY_ID=your-staging-r2-access-key
# R2_SECRET_ACCESS_KEY=your-staging-r2-secret-key 