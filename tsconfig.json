{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "noEmit": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@easycode/*": ["services/*"],
      "@easycode-pkgs/*": ["packages/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
